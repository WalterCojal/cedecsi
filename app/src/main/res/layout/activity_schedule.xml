<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.schedule.ScheduleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            app:title="Tracking"
            app:titleTextColor="@color/on_primary"
            app:navigationIcon="@drawable/ic_arrow_back"
            />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Iniciar tracking"
            android:drawableEnd="@drawable/ic_tracking"
            android:drawableTint="@color/on_error"
            android:backgroundTint="@color/secondary"
            />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Detener tracking"
            android:drawableEnd="@drawable/ic_stop_tracking"
            android:drawableTint="@color/on_error"
            android:textColor="@color/on_error"
            android:backgroundTint="@color/error"
            />

        <Button
            android:id="@+id/btnItems"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:text="Ver historial"
            android:backgroundTint="@color/secondary"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>